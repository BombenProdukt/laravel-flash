{
    "name": "bombenprodukt/laravel-flash",
    "description": "A package to easily make use of message flashing with Laravel.",
    "license": "MIT",
    "keywords": [
        "BombenProdukt",
        "laravel",
        "laravel-flash"
    ],
    "authors": [
        {
            "name": "Brian Faust",
            "email": "brian@bombenprodukt.com",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/faustbrian/laravel-flash",
    "require": {
        "php": "^8.2",
        "blade-ui-kit/blade-heroicons": "^2.1",
        "illuminate/contracts": "^10.0",
        "bombenprodukt/laravel-package-powerpack": "^1.0"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.30",
        "friendsofphp/php-cs-fixer": "^3.16",
        "mockery/mockery": "^1.5",
        "nunomaduro/collision": "^7.0",
        "nunomaduro/larastan": "^2.5",
        "orchestra/testbench": "^8.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "pestphp/pest-plugin-watch": "^2.0",
        "phpstan/extension-installer": "^1.2",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3",
        "bombenprodukt/php-cs-fixer-config": "^1.0",
        "spatie/laravel-ray": "^1.32"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "BombenProdukt\\Flash\\": "src"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true,
            "ergebnis/composer-normalize": true
        },
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "aliases": {
                "Flash": "BombenProdukt\\Flash\\Facades\\Flash"
            },
            "providers": [
                "BombenProdukt\\Flash\\ServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "format": "vendor/bin/php-cs-fixer fix",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage"
    }
}
